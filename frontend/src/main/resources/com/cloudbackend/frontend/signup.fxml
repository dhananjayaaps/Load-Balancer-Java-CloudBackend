<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <!-- Title -->
      <Label text="Signup - Load Balancer Cloud" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
      
      <!-- Name Field -->
      <TextField fx:id="nameField" promptText="Full Name" maxWidth="300.0">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </TextField>
      
      <!-- Username Field -->
      <TextField fx:id="usernameField" promptText="Username" maxWidth="300.0" />
      
      <!-- Password Field -->
      <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300.0" />
      
      <!-- Signup Button -->
      <Button text="Signup" fx:id="signupButton" maxWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
      
      <!-- Login Navigation -->
      <Button text="Back to Login" fx:id="loginButton" maxWidth="150.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
   </children>
   <padding>
      <Insets top="20.0" left="20.0" right="20.0" bottom="20.0" />
   </padding>
</VBox>
